    // 用来忽略工程打开的文件夹
    "files.exclude": {
        "**/.vscode": false,
        "**/.DS_Store": true,
        "**/.history": true,
        "**/nbproject": true,
        "*.md":true  ,
        "setpu*" :true,       
        "*.yml*" :true,       
        "*.cff*" :true,       
        "*.in*" :true,       
        "**/docker" :true,       
        "setup*" :true,       
